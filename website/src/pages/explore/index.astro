---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PredictionExplorer from '../../components/PredictionExplorer';
import predictions from '../../../data/predictions.json';
---

<BaseLayout title="Explore Predictions" description="Interactive prediction explorer: 37 predictions derived from division algebra geometry, filterable by tier, domain, and status.">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <div class="mb-10">
      <h1 class="text-3xl font-bold text-white mb-3">Prediction Explorer</h1>
      <p class="text-gray-400 max-w-3xl">
        Browse all predictions derived from division algebra geometry. Filter by tier, domain, status, or blind prediction flag. Sort by precision to see the most accurate results first.
      </p>
    </div>

    <PredictionExplorer client:load predictions={predictions} />

    <div class="mt-12 border-t border-gray-800 pt-8">
      <h2 class="text-lg font-semibold text-white mb-3">Understanding the tiers</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
        <div class="flex items-start gap-2">
          <span class="w-2 h-2 mt-1.5 rounded-full bg-emerald-400 shrink-0"></span>
          <div>
            <div class="text-white font-medium">Tier 1</div>
            <div class="text-gray-500">Sub-10 ppm precision. The strongest results.</div>
          </div>
        </div>
        <div class="flex items-start gap-2">
          <span class="w-2 h-2 mt-1.5 rounded-full bg-yellow-400 shrink-0"></span>
          <div>
            <div class="text-white font-medium">Tier 2</div>
            <div class="text-gray-500">10-10,000 ppm. Solid but less precise.</div>
          </div>
        </div>
        <div class="flex items-start gap-2">
          <span class="w-2 h-2 mt-1.5 rounded-full bg-orange-400 shrink-0"></span>
          <div>
            <div class="text-white font-medium">Tier 3</div>
            <div class="text-gray-500">Percent-level. Interesting but inconclusive.</div>
          </div>
        </div>
        <div class="flex items-start gap-2">
          <span class="w-2 h-2 mt-1.5 rounded-full bg-red-400 shrink-0"></span>
          <div>
            <div class="text-white font-medium">Falsified</div>
            <div class="text-gray-500">Documented failures. Kept for honesty.</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
