---
import BaseLayout from '../../layouts/BaseLayout.astro';
import DerivationChainViewer from '../../components/DerivationChainViewer.tsx';
import graphData from '../../../data/derivation-graph.json';
---

<BaseLayout title="Derivation Chains" description="Interactive graph visualization: trace any prediction back to its axioms through the full derivation chain.">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Derivation Chain Viewer</h1>
      <p class="text-gray-400 max-w-2xl">
        Pick any derivation chain to trace a prediction back to its axioms. Every node represents
        a mathematical result; every edge is tagged with its derivation type:
        <span class="text-blue-400">[A] from axiom</span>,
        <span class="text-orange-400">[I] from import</span>,
        <span class="text-emerald-400">[D] derived</span>.
      </p>
    </div>
    <DerivationChainViewer client:load graphData={graphData} />
  </div>
</BaseLayout>
