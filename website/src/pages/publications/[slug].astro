---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const entries = await getCollection('publications');
  return entries
    .filter(e => e.slug !== 'math-foundations') // math has its own page
    .map(entry => ({
      params: { slug: entry.slug },
      props: { entry },
    }));
}

const { entry } = Astro.props;
const { Content, headings } = await entry.render();

const tocItems = headings.filter(h => h.depth <= 2).map(h => ({
  depth: h.depth,
  slug: h.slug,
  text: h.text,
}));
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <div class="max-w-[90rem] mx-auto px-4 sm:px-6 py-12 lg:flex lg:gap-8">
    {/* TOC Sidebar */}
    {tocItems.length > 3 && (
      <aside class="hidden lg:block lg:w-72 shrink-0">
        <div class="sticky top-20 max-h-[calc(100vh-6rem)] overflow-y-auto pr-4 pb-8">
          <h2 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4">Contents</h2>
          <nav class="space-y-0.5">
            {tocItems.map(item => (
              <a
                href={`#${item.slug}`}
                class={`block py-1 text-sm transition-colors hover:text-white ${
                  item.depth === 1
                    ? 'text-gray-300 font-semibold mt-3 first:mt-0'
                    : 'text-gray-500 pl-3'
                }`}
              >
                {item.text}
              </a>
            ))}
          </nav>
        </div>
      </aside>
    )}

    {/* Main content */}
    <article class="min-w-0 max-w-4xl">
      {/* Header */}
      <div class="mb-10">
        <div class="flex items-center gap-3 mb-4">
          {entry.data.version && (
            <span class="text-xs font-semibold px-2.5 py-1 rounded-full bg-brand-600/20 text-brand-400 border border-brand-600/30">
              v{entry.data.version}
            </span>
          )}
          {entry.data.lastUpdated && (
            <span class="text-xs text-gray-600">Last updated: {entry.data.lastUpdated}</span>
          )}
        </div>
        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-3">{entry.data.title}</h1>
        {entry.data.description && (
          <p class="text-gray-400 max-w-2xl">{entry.data.description}</p>
        )}
        <div class="mt-4">
          <a href="/publications" class="text-sm text-brand-400 hover:text-brand-300">&larr; All publications</a>
        </div>
      </div>

      {/* Mobile TOC */}
      {tocItems.length > 3 && (
        <details class="lg:hidden mb-8 bg-gray-900 border border-gray-800 rounded-xl">
          <summary class="px-5 py-3 text-sm font-semibold text-gray-300 cursor-pointer">
            Table of Contents
          </summary>
          <nav class="px-5 pb-4 space-y-0.5">
            {tocItems.map(item => (
              <a
                href={`#${item.slug}`}
                class={`block py-1 text-sm transition-colors hover:text-white ${
                  item.depth === 1
                    ? 'text-gray-300 font-semibold mt-2 first:mt-0'
                    : 'text-gray-500 pl-3'
                }`}
              >
                {item.text}
              </a>
            ))}
          </nav>
        </details>
      )}

      {/* Rendered markdown */}
      <div class="prose">
        <Content />
      </div>

      {/* Footer */}
      <div class="mt-16 pt-8 border-t border-gray-800 text-sm text-gray-600 italic">
        <p>Status: Speculative theoretical framework. Not peer-reviewed. Amateur work with AI assistance.</p>
        <p class="mt-1">All mathematical claims are computationally verified via 736+ SymPy scripts.</p>
      </div>
    </article>
  </div>
</BaseLayout>
