---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getEntry } from 'astro:content';
import { FRAMEWORK } from '../../data/constants';

const entry = await getEntry('publications', 'math-foundations');
if (!entry) throw new Error('math-foundations not found in content collection');

const { Content, headings } = await entry.render();

// Build TOC: only h1 (parts) and h2 (sections) for manageable sidebar
const tocItems = headings.filter(h => h.depth <= 2).map(h => ({
  depth: h.depth,
  slug: h.slug,
  text: h.text,
}));
---

<BaseLayout title="Mathematical Foundations" description="Complete, self-contained mathematical development from axioms to consequences. v1.0.">
  <div class="max-w-[90rem] mx-auto px-4 sm:px-6 py-12 lg:flex lg:gap-8">
    {/* TOC Sidebar */}
    <aside class="hidden lg:block lg:w-72 shrink-0">
      <div class="sticky top-20 max-h-[calc(100vh-6rem)] overflow-y-auto pr-4 pb-8">
        <h2 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-4">Contents</h2>
        <nav class="space-y-0.5">
          {tocItems.map(item => (
            <a
              href={`#${item.slug}`}
              class={`block py-1 text-sm transition-colors hover:text-white ${
                item.depth === 1
                  ? 'text-gray-300 font-semibold mt-3 first:mt-0'
                  : 'text-gray-500 pl-3'
              }`}
            >
              {item.text}
            </a>
          ))}
        </nav>
      </div>
    </aside>

    {/* Main content */}
    <article class="min-w-0 max-w-4xl">
      {/* Header */}
      <div class="mb-10">
        <div class="flex items-center gap-3 mb-4">
          <span class="text-xs font-semibold px-2.5 py-1 rounded-full bg-brand-600/20 text-brand-400 border border-brand-600/30">
            v1.0
          </span>
          <span class="text-xs text-gray-600">Last updated: 2026-02-09</span>
        </div>
        <h1 class="text-3xl sm:text-4xl font-bold text-white mb-3">Mathematical Foundations</h1>
        <p class="text-gray-400 max-w-2xl">
          Complete, self-contained mathematical development from axioms to consequences.
          For mathematicians and mathematical physicists capable of auditing formal proofs.
        </p>
        <div class="mt-4 p-3 bg-gray-900 border border-gray-800 rounded-lg text-sm text-gray-400">
          <strong class="text-gray-300">Companion document:</strong> The <a href="/publications/interpretive-companion" class="text-brand-400 hover:text-brand-300">Interpretive Companion</a> provides section-by-section physical reading of every mathematical object defined here.
        </div>
        <div class="mt-3">
          <a href="/publications" class="text-sm text-brand-400 hover:text-brand-300">&larr; All publications</a>
        </div>
      </div>

      {/* Mobile TOC */}
      <details class="lg:hidden mb-8 bg-gray-900 border border-gray-800 rounded-xl">
        <summary class="px-5 py-3 text-sm font-semibold text-gray-300 cursor-pointer">
          Table of Contents
        </summary>
        <nav class="px-5 pb-4 space-y-0.5">
          {tocItems.map(item => (
            <a
              href={`#${item.slug}`}
              class={`block py-1 text-sm transition-colors hover:text-white ${
                item.depth === 1
                  ? 'text-gray-300 font-semibold mt-2 first:mt-0'
                  : 'text-gray-500 pl-3'
              }`}
            >
              {item.text}
            </a>
          ))}
        </nav>
      </details>

      {/* Rendered markdown */}
      <div class="prose">
        <Content />
      </div>

      {/* Footer */}
      <div class="mt-16 pt-8 border-t border-gray-800 text-sm text-gray-600 italic">
        <p>Status: Speculative theoretical framework. Not peer-reviewed. Amateur work with AI assistance.</p>
        <p class="mt-1">All mathematical claims are computationally verified via {FRAMEWORK.scriptCount} SymPy scripts.</p>
      </div>
    </article>
  </div>
</BaseLayout>
